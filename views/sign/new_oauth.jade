extends ../layout
block content
   #content
      .panel
         .header
             ul.breadcrumb
                 li
                    a(href='/') 主页
                 li.active 重置密码
         .inner
             form#signin_form.form-horizontal(action='#{actionPath || ""}',method='post')
                 input(type='hidden',name='_csrf',value='#{csrf || ""}')
                 input(type='hidden',name='isnew',value='1')

                 .form-group
                     label.control-label.col-sm-2 通过 GitHub 账号
                     .col-sm-10
                         input.btn(type='submit',value='注册新账号')

             form#signin_form.form-horizontal(action='#{actionPath || ""}',method='post')
                 .form-group
                     label.control-label.col-sm-2 或者

                 .form-group
                     label.control-label.col-sm-2(for='name') 用户名
                     .col-sm-10
                         input#name.form-control(type='text',name='name',size='30')
                 .form-group
                     label.control-label.col-sm-2(for='pass') 密码
                     .col-sm-10
                         input#pass.form-control(type='password',name='pass',size='30')

                 input(type='hidden',name='_csrf',value='#{csrf || ""}')

                 .form-group
                     .col-sm-offset-2.col-sm-10
                         button.btn.btn-primary(type="submit") 关联旧账号
